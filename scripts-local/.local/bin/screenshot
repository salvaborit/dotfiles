#!/bin/bash
# Screenshot tool with smart selection, annotation, and clipboard support
# Usage: screenshot [mode] [processing]
#   Modes: smart (default), region, windows, fullscreen
#   Processing: slurp (default - opens satty editor), clipboard (direct to clipboard)

# Determine output directory
[[ -f ~/.config/user-dirs.dirs ]] && source ~/.config/user-dirs.dirs
OUTPUT_DIR="${XDG_PICTURES_DIR:-$HOME/Pictures}"

if [[ ! -d "$OUTPUT_DIR" ]]; then
  notify-send "Screenshot Error" "Directory does not exist: $OUTPUT_DIR" -u critical
  exit 1
fi

# If slurp is already running, kill it and exit (allows toggle behavior)
pkill slurp && exit 0

MODE="${1:-smart}"
PROCESSING="${2:-slurp}"

# Get rectangles for windows and monitors on current workspace
get_rectangles() {
  local active_workspace=$(hyprctl monitors -j | jq -r '.[] | select(.focused == true) | .activeWorkspace.id')
  hyprctl monitors -j | jq -r --arg ws "$active_workspace" '.[] | select(.activeWorkspace.id == ($ws | tonumber)) | "\(.x),\(.y) \((.width / .scale) | floor)x\((.height / .scale) | floor)"'
  hyprctl clients -j | jq -r --arg ws "$active_workspace" '.[] | select(.workspace.id == ($ws | tonumber)) | "\(.at[0]),\(.at[1]) \(.size[0])x\(.size[1])"'
}

# Select region based on mode
case "$MODE" in
  region)
    # Free-form region selection
    wayfreeze & PID=$!
    sleep .1
    SELECTION=$(slurp 2>/dev/null)
    kill $PID 2>/dev/null
    ;;
  windows)
    # Snap to window boundaries
    wayfreeze & PID=$!
    sleep .1
    SELECTION=$(get_rectangles | slurp -r 2>/dev/null)
    kill $PID 2>/dev/null
    ;;
  fullscreen)
    # Capture entire focused monitor
    SELECTION=$(hyprctl monitors -j | jq -r '.[] | select(.focused == true) | "\(.x),\(.y) \((.width / .scale) | floor)x\((.height / .scale) | floor)"')
    ;;
  smart|*)
    # Smart selection: show window/monitor hints, but allow free-form
    RECTS=$(get_rectangles)
    wayfreeze & PID=$!
    sleep .1
    SELECTION=$(echo "$RECTS" | slurp 2>/dev/null)
    kill $PID 2>/dev/null

    # If selection area is tiny (L * W < 20), assume click on window/output
    # and expand to that rectangle (prevents accidental 2px screenshots)
    if [[ "$SELECTION" =~ ^([0-9]+),([0-9]+)[[:space:]]([0-9]+)x([0-9]+)$ ]]; then
      if (( ${BASH_REMATCH[3]} * ${BASH_REMATCH[4]} < 20 )); then
        click_x="${BASH_REMATCH[1]}"
        click_y="${BASH_REMATCH[2]}"

        while IFS= read -r rect; do
          if [[ "$rect" =~ ^([0-9]+),([0-9]+)[[:space:]]([0-9]+)x([0-9]+) ]]; then
            rect_x="${BASH_REMATCH[1]}"
            rect_y="${BASH_REMATCH[2]}"
            rect_width="${BASH_REMATCH[3]}"
            rect_height="${BASH_REMATCH[4]}"

            if (( click_x >= rect_x && click_x < rect_x+rect_width && click_y >= rect_y && click_y < rect_y+rect_height )); then
              SELECTION="${rect_x},${rect_y} ${rect_width}x${rect_height}"
              break
            fi
          fi
        done <<< "$RECTS"
      fi
    fi
    ;;
esac

# Exit if no selection made (user cancelled)
[ -z "$SELECTION" ] && exit 0

# Process screenshot
if [[ $PROCESSING == "slurp" ]]; then
  # Open in satty annotation editor
  grim -g "$SELECTION" - |
    satty --filename - \
      --output-filename "$OUTPUT_DIR/screenshot-$(date +'%Y-%m-%d_%H-%M-%S').png" \
      --early-exit \
      --actions-on-enter save-to-clipboard \
      --save-after-copy \
      --copy-command 'wl-copy'
else
  # Direct to clipboard
  grim -g "$SELECTION" - | wl-copy
  notify-send "Screenshot" "Copied to clipboard"
fi
