#!/bin/bash
# Launch web app or focus if already open
# Usage: launch-or-focus-webapp <window-pattern> <desktop-id-or-url>

if (($# < 2)); then
  echo "Usage: launch-or-focus-webapp <window-pattern> <desktop-id-or-url>"
  exit 1
fi

WINDOW_PATTERN="$1"
INPUT="$2"

# Find window matching the pattern
WINDOW_ADDRESS=$(hyprctl clients -j | jq -r --arg p "$WINDOW_PATTERN" \
  '.[]|select((.class|test("\\b" + $p + "\\b";"i")) or (.title|test("\\b" + $p + "\\b";"i")))|.address' | head -n1)

if [[ -n $WINDOW_ADDRESS ]]; then
  # Window exists, focus it
  hyprctl dispatch focuswindow "address:$WINDOW_ADDRESS"
else
  # Launch webapp (supports both .desktop IDs and URLs)
  launch-webapp "$INPUT"
fi
