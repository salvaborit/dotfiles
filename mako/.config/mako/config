# Mako Notification Daemon Configuration
# Frosted glass aesthetic matching waybar/rofi

# Layout & Positioning
anchor=top-right
width=350
height=150
margin=10
padding=15
border-size=1
border-radius=11

# Spacing between notifications
outer-margin=10

# Maximum notifications visible at once
max-visible=5

# Sorting (by time, newest first)
sort=-time

# Default timeout (milliseconds)
default-timeout=10000

# Icons
icons=1
max-icon-size=48
icon-location=left

# Font (matching waybar/rofi)
font=SFMono Nerd Font 10

# Layer (top layer for blur effect - same as waybar)
layer=top

# Frosted Glass Effect - Base Colors
# Background: rgba(30, 30, 46, 0.01) - 1% opacity like waybar
background-color=#1e1e2e03
# Foreground: #cdd6f4
text-color=#cdd6f4
# Border: rgba(205, 214, 244, 0.2) - 20% opacity
border-color=#cdd6f433

# Progress bar color
progress-color=over #89b4fa

# Grouping
#group-by=app-name

# Urgency Levels

[urgency=low]
# Slightly more transparent
background-color=#1e1e2e03
text-color=#bac2de
border-color=#cdd6f426
default-timeout=3000

[urgency=normal]
# Same as base
background-color=#1e1e2e03
text-color=#cdd6f4
border-color=#cdd6f433
default-timeout=5000

[urgency=critical]
# More opaque for critical alerts - 90% like rofi solid elements
background-color=#1e1e2e03
text-color=#f38ba8
border-color=#f38ba8
default-timeout=0
